<h1>New Song</h1>

<form action="/songs" method="POST">

<label for="name">Name:</label> <input type="text" id="name" name="song[name]"></br>
<label for="artist_name">Artist:</label>
<input type="text" id="artist_name" name="artist[name]"></br>

<label>Genres:</label></br>
<% Genre.all.each do |genre| %>
    <input type="checkbox" id="genre_<%= genre.name %>" name="genres[]" value="<%= genre.id %>"><label for="genre_<%= genre.name %>"><%= genre.name %></label></br>
<% end %>
</br>

<input type="submit" value="Create"></br></br>
</form>